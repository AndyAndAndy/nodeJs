<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href={{cssModule}} media="screen" title="no title" charset="utf-8">
</head>
<style media="screen">
  body{
    margin: 0;
    padding: 0;
  }
  h1,h2,h3,h4,h5,h6,ul{
    margin: 0;
    padding: 0;
    text-align:center;
  }
  header{
    width: 100%;
    border-bottom: 4px solid #005f3c;
  }
  .content-warp{
    outline:1px solid #999;
    margin: 10px auto;
    width: 1000px;
    height: 800px;
    background: white;
  }
  footer{
    width: 100%;
    height: 80px;
    border-top: 5px solid #005f3c;
  }
</style>
<body>
  <header>
    {{>common/header}}
  </header>

  <div class="content-warp">
      {{{body}}}
  </div>

  <footer>
    {{>common/footer}}
  </footer>
</body>
<script src="/static/js/outerPlugin/jquery.min.js" type="text/javascript"></script>
<script src="/static/js/outerPlugin/sea.js" type="text/javascript"></script>
<!-- seajs 的全局配置  -->
<script type="text/javascript">
            seajs.config({
                base:'sea_module',
                charset:'utf-8',
                timeout:20000,
                debug:0
            })
            seajs.use('{{seaModule}}')
    </script>

</html>
